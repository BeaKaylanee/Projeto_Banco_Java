package exercicioslista4;

import java.util.Arrays;
import java.util.Scanner;

public class Vetor1 {

	public static void main(String[] args) {
		Scanner lerScannner = new Scanner(System.in);

		int vetorInteiros[] = { 2, 5, 1, 3, 4, 9, 7, 8, 10, 6 };

		Arrays.sort(vetorInteiros);


		for (int indice = 0; indice < vetorInteiros.length; indice++) {
			System.out.println(vetorInteiros[indice]);
		}

		System.out.println("\nO Digite o número que você deseja encontrar: ");
		int numero = lerScannner.nextInt();
		
		int posicao = Arrays.binarySearch(vetorInteiros, numero);

		
		if (posicao >= 0)
			System.out.println("\nO O número " + numero +  " está localizado na posição: " + posicao + "° ");
		else
			System.out.println("\nO número " + numero + " não foi encontrado!");

	}

}
