package exercicioslista4;

import java.util.Scanner;

public class Vetor2 {

	public static void main(String[] args) {
		Scanner lerScannner = new Scanner(System.in);

		int vetorInteiros[] = new int[3];

		int pares = 0, impares = 0;

		for (int indice = 0; indice < 3; indice++) {
			System.out.println("Digite o " + (indice + 1) + "º Número: ");
			vetorInteiros[indice] = lerScannner.nextInt();
			//int numero = lerScannner.nextInt();
			
			if (indice % 2 == 0)
				pares++;
			else
				impares++;
		}
		System.out.println("\nTotal de números pares: " + pares);
		System.out.println("Total de números ímpares: " + impares);

		lerScannner.close();

		/*for (int indice = 0; indice < 3; indice++) {
			System.out.print("Digite o " + indice + "º número: ");
			int numero = lerScannner.nextInt();
			if (numero % 2 == 0)
				pares++;
			else
				impares++;
		}*/

		/*for (int indice = 0; indice < 3; indice++) {
			if (indice % 2 == 0) {
				System.out.println("Elementos pares: " + vetorInteiros[indice]);
			}*/

		}
	}

