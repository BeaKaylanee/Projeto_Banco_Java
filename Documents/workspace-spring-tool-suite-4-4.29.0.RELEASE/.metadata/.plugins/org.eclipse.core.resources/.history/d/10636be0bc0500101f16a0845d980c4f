package exercicios3;

import java.util.Scanner;

public class LacoWhile {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner lerScannner = new Scanner(System.in);
		boolean novaTentativa = false;
		 int count = 0;
		
		do {
			System.out.print("Informe uma idade: ");
			int idade = lerScannner.nextInt();
			
			System.out.print("Deseja informar outra idade? (s/n): ");
            String continua = lerScannner.next().toUpperCase();

          novaTentativa = continua.equals("S"); 
         
          if (idade < 21) {
        	  count++;
			System.out.println();
		}
      	System.out.println("\nTotal menores 21: " + count);
		} while (novaTentativa);
	}

}
