package vetor;

import java.util.Scanner;

public class ExemploTeste {

	public static void main(String[] args) {
		Scanner lerScannner = new Scanner(System.in);

		int vet[] = new int[3];
		int total = 0;

		for (int i = 0; i < 3; i++) {
			System.out.println("Informe um nÃºmero:");
			vet[i] = lerScannner.nextInt();
		}

		for (int i = 0; i < 3; i++) {
			if (vet[i] % 2 == 0) {
				total += vet[i];
			}
		}

	}
}
