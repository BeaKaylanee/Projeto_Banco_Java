package exercicioslista4;

import java.util.Arrays;
import java.util.Scanner;

public class Vetor1 {

	public static void main(String[] args) {
		Scanner lerScannner = new Scanner(System.in);

		boolean continua = true;
		int vetorInteiros[] = { 2, 5, 1, 3, 4, 9, 7, 8, 10, 6 };

		Arrays.sort(vetorInteiros);

		
		while (continua) {
			System.out.println("\n Digite o número que você deseja encontrar: ");
			int numero = lerScannner.nextInt();

			int posicao = Arrays.binarySearch(vetorInteiros, numero);

			if (posicao >= 0)
				System.out.println("\n O número " + numero + " está localizado na posição: " + posicao + "");
			else
				System.out.println("\n número " + numero + " não foi encontrado!");

			System.out.print("Deseja informar outro número para localizar a posição? (s/n): ");
			String resposta = lerScannner.next().toUpperCase();
			continua = resposta.equals("S");
		}
		
		 lerScannner.close();

	}

}
