package exercicios6;

import java.util.LinkedList;
import java.util.Scanner;

public class CollectionsEx {

	public static void main(String[] args) {
		Scanner lerScanner = new Scanner(System.in);
		LinkedList<String> nomes = new LinkedList<>();
		int opcao;

		do {
			System.out.println("_________________________________");
			System.out.println("1 - Adicionar cliente na fila   |");
			System.out.println("2 - Listar todos os clientes    |");
			System.out.println("3 - Retirar cliente da fila     |");
			System.out.println("0 - Sair                        |");
			System.out.println("________________________________|");
			System.out.print("Entre com a opção desejada: ");

			opcao = lerScanner.nextInt();
			lerScanner.nextLine();

			switch (opcao) {
			case 1:
				System.out.print("\nDigite o nome: ");
				String nome = lerScanner.nextLine();
				nomes.add(nome);
				System.out.println("\nFila atualizada: " + nomes);
				System.out.println("Cliente Adicionado!\n");
				break;
			case 2:
				if (nomes.isEmpty()) {
					System.out.println("\nA fila está vazia!\n");
				} else {
					System.out.println("\nClientes na fila:");
					for (String cliente : nomes) {
						System.out.println(cliente);
					}
				}
				break;
			case 3:
				if (!nomes.isEmpty()) {
					System.out.println("\nCliente removido: " + nomes.poll());
					System.out.println("\nFila atualizada: " + nomes);
				} else {
					System.out.println("\nA fila já está vazia!");
				}
				break;
			case 0:
				System.out.println("\nSaindo do sistema...");
				break;
			default:
				System.out.println("\nOpção inválida! Tente novamente.");
				break;
			}
		} while (opcao != 0);

		lerScanner.close();
	}
}
