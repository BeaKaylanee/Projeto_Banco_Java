package metodos;

import java.util.Scanner;

public class Exemplo2 {

	public static void main(String[] args) {
		
		Scanner lerScanner = new Scanner (System.in);
		
		System.out.println("Informe a idade: ");
		String classificar = classificarIdade(lerScanner.nextInt());
		System.out.println(classificar);
	}
	
	public static String classificarIdade(int idade) {
		
		if(idade < 13) {
			return "CrianÃ§a";
		}else if(idade < 18) {
			return "Adolecente";
		}else if(idade < 65) {
			return "Adulto";
		}else {
			return "Idoso";
		}		
		
	}

}
