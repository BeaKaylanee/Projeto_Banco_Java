		Scanner lerScannner = new Scanner (System.in);
		
		
		
		for (int cont = 1; cont <= 10; cont++) {
			System.out.println("Informe um nÃºmero: ");
			int numero= lerScannner.nextInt();
			
			if (numero % 2 == 0 ) {
				System.out.println(numero);
			}
		       lerScannner.close();
		}
