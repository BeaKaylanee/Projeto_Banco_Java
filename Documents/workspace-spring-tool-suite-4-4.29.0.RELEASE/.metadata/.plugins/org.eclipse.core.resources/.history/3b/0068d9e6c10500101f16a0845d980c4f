package exercicios3;

import java.util.Scanner;

public class LacoDoWhile {

	public static void main(String[] args) {
		Scanner lerScannner = new Scanner(System.in);
		int count = 0;
		boolean novaTentativa;

		do {
			System.out.print("Digite um número: ");
			int numero = lerScannner.nextInt();

			if (numero > 0) {
				count++;
			}

			System.out.print("Deseja inserir outro número? (s/n): ");
			String continua = lerScannner.next().toUpperCase();
			novaTentativa = continua.equals("S");

		} while (novaTentativa);

		lerScannner.close();
		System.out.println("Quantidade de números positivos digitados: " + count);
	}
}
