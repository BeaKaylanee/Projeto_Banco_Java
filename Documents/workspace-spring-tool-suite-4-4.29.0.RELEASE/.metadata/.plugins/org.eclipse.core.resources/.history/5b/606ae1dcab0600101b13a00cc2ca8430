package exercicioslista4;

import java.util.Scanner;

public class Vetor2 {

	public static void main(String[] args) {
		Scanner lerScannner = new Scanner(System.in);

		  int vetorInteiros[] = new int[3];
	        Scanner leia = new Scanner(System.in);
	        
	        for(int indice = 0; indice < 3; indice ++) {
	            System.out.println("Digite o " + (indice + 1)  +"º Número: ");
	            vetorInteiros[indice] = leia.nextInt();
	        }
	        
	        System.out.println("\nOs números digitados foram: \n");
	        
	        for (int indice = 0; indice < 3; indice++) {
	        	if (indice % 2 == 0) {
	        		  System.out.println((indice + 1) + "º Elementos pares:: " + vetorInteiros[indice]);
				}
	          
	        }
	}

}
