package exercicioslista4;

import java.util.ArrayList;
import java.util.Scanner;

public class Vetor2 {

	public static void main(String[] args) {
		Scanner lerScannner = new Scanner(System.in);

		 int vetorInteiros[] = new int[3];
	        ArrayList<Integer> numerosPares = new ArrayList<>();
	        ArrayList<Integer> numerosImpares = new ArrayList<>();
	        int somaPares = 0, somaImpares = 0;

	        for (int indice = 0; indice < 3; indice++) {
	            System.out.println("Digite o " + (indice + 1) + "º Número: ");
	            vetorInteiros[indice] = lerScannner.nextInt();

	            if (vetorInteiros[indice] % 2 == 0) {
	                numerosPares.add(vetorInteiros[indice]);
	                somaPares += vetorInteiros[indice]; 
	            } else {
	                numerosImpares.add(vetorInteiros[indice]);
	                somaImpares += vetorInteiros[indice]; // 
	            }
	        }

	        System.out.println("\nNúmeros pares digitados: " + numerosPares);
	        System.out.println("Soma dos números pares: " + somaPares);
	        System.out.println("Números ímpares digitados: " + numerosImpares);
	        System.out.println("Soma dos números ímpares: " + somaImpares);

	        lerScannner.close();

	}
}
