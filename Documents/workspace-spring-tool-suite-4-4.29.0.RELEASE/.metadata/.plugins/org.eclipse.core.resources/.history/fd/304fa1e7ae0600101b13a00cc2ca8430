package exercicioslista4;

import java.util.ArrayList;
import java.util.Scanner;

public class Vetor2 {

	public static void main(String[] args) {
		Scanner lerScannner = new Scanner(System.in);

		int vetorInteiros[] = new int[3];		

		 ArrayList<Integer> numerosPares = new ArrayList<>();
	     ArrayList<Integer> numerosImpares = new ArrayList<>();


		for (int indice = 0; indice < 3; indice++) {
			System.out.println("Digite o " + (indice + 1) + "º Número: ");
			vetorInteiros[indice] = lerScannner.nextInt();

			if (indice % 2 == 0)
				 numerosPares.add(vetorInteiros[indice]);
			else
				 numerosImpares.add(vetorInteiros[indice]);
		}
		System.out.println("\nElementos pares: " + numerosPares);
		System.out.println("Elementos nos índices ímpares: " + numerosImpares);

		lerScannner.close();

	}
}
