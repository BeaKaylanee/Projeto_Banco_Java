package lacosrepeticao;

import java.util.Scanner;

public class DoWhile {

	public static void main(String[] args) {
		 
		Scanner lerScannner = new Scanner (System.in);
		
		String  usuarioCorreto = "admin";
		String  senhaCorreta= "12345";
		boolean novaTentativa = false;
		
		
		do {
			
			System.out.print("Digite o nome de usuário: ");
            String usuario = lerScannner.nextLine();
 
            System.out.print("Digite a senha: ");
            String senha = lerScannner.nextLine();
            
            if (usuario.equals(usuarioCorreto) && senha.equals(senhaCorreta)) {
				System.out.println("Autenticação bem sucedida! Bem-vindo(a) ");
			}else {
				System.out.println("Usuário ou senha incorretos. Tente novamente.");
                System.out.print("Deseja tentar novamente? (s/n): ");
                String continua = lerScannner.next().toUpperCase();
                
                if (continua.equals("S")) {
                	novaTentativa = true;
                	lerScannner.nextLine();
				}else {
					novaTentativa = false;
					System.out.println("Erro! ");
				}
                
			}
			
		} while (novaTentativa);
	}

}
